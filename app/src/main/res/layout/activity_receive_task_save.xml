<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundcolor">

    <!-- Heading for Cart movement table -->
    <TableLayout
        android:id="@+id/tbl_CartMovementTable"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_gravity="center"
        android:layout_marginTop="7dp">

        <!-- Row 1: Cart ID Field -->
        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginBottom="1dp"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:id="@+id/tvPallet"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="0.50"
                android:paddingLeft="15dp"
                android:text=""
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvCase"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="0.50"
                android:text=""
                android:textSize="14sp" />

        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="3dp"
            android:layout_marginBottom="6dp"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:id="@+id/tvItemDesc"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="0.70"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:text=""
                android:textSize="14sp" />

        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_marginBottom="1dp"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_weight="0.10"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:text="@string/Pallet"
                android:textSize="15sp" />


            <TextView
                android:id="@+id/tvPalno"
                android:layout_width="0dip"
                android:layout_height="30dp"
                android:layout_marginRight="5dp"
                android:layout_weight="0.60"
                android:gravity="center_vertical"
                android:paddingRight="5dp"
                android:text=""
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_weight="0.10"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:text="Slot"
                android:textSize="15sp" />


            <TextView
                android:id="@+id/tvSlot"
                android:layout_width="0dip"
                android:layout_height="30dp"
                android:layout_marginRight="5dp"
                android:layout_weight="0.70"
                android:gravity="center_vertical"
                android:paddingRight="5dp"
                android:text=""
                android:textSize="14sp" />


        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="3dp"
            android:layout_marginBottom="1dp"
            android:layout_weight="1">

            <TextView
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="0.30"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:text="Order Qty"
                android:textSize="15sp" />


            <TextView
                android:id="@+id/ActlQty"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:layout_weight="0.70"
                android:gravity="center_vertical"
                android:paddingRight="5dp"
                android:text=""
                android:textSize="14sp" />

        </TableRow>

        <!-- Row 2: Cart Value Field -->
        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="3dp"
            android:layout_marginBottom="1dp"
            android:layout_weight="1">

            <TextView
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_marginRight="2dp"
                android:layout_weight="0.30"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:text="Actual Qty"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/edtQty"
                android:layout_width="0dip"
                android:layout_height="35dp"
                android:layout_marginEnd="5dp"
                android:layout_weight="0.70"
                android:background="#ffffff"
                android:dropDownWidth="wrap_content"
                android:gravity="left|center"
                android:hint="Enter Qty"
                android:inputType="number"
                android:maxLength="5"
                android:paddingStart="10dp"
                android:paddingEnd="5dp"
                android:selectAllOnFocus="true"
                android:singleLine="true"
                android:text=""
                android:textSize="14sp">

                <requestFocus />
            </EditText>
        </TableRow>


        <!-- Row 3: Room ID Field -->
        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="3dp"
            android:layout_marginBottom="1dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tvPrinter"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:linksClickable="true"
                android:paddingStart="15dp"
                android:textColor="@color/colorBlueNew"
                android:textSize="14sp" />
        </TableRow>

        <!-- Row 4: Room Desc Field -->
        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="3dp"
            android:layout_marginBottom="1dp"
            android:layout_weight="1">

            <TextView
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.35"
                android:paddingLeft="15dp"
                android:text="@string/OverSLot"
                android:textSize="15sp" />

            <AutoCompleteTextView
                android:id="@+id/edtSlot"
                android:layout_width="0dip"
                android:layout_height="35dp"
                android:layout_weight="0.70"
                android:background="#ffffff"
                android:dropDownWidth="wrap_content"
                android:gravity="left|center"
                android:hint="@string/OverSLot"
                android:inputType="textCapCharacters"
                android:paddingStart="10dp"
                android:paddingEnd="5dp"
                android:maxLength="10"
                android:singleLine="true"
                android:text=""
                android:textSize="14sp"/>

            <ImageView
                android:id="@+id/imgBtn_lookup"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginEnd="5dp"
                android:src="@drawable/ic_baseline_search_24" />
            <!--android:imeOptions="actionNext"-->
        </TableRow>

        <!-- Row 2: Cart Value Field -->
        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="3dp"
            android:layout_marginBottom="1dp"
            android:layout_weight="1">

            <TextView
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="0.30"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:text="@string/MMGtin"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/edtGtin"
                android:layout_width="0dip"
                android:layout_height="35dp"
                android:layout_marginEnd="5dp"
                android:layout_weight="0.70"
                android:background="#ffffff"
                android:dropDownWidth="wrap_content"
                android:gravity="left|center"
                android:hint="@string/scan_enter_gtin"
                android:maxLength="50"
                android:paddingStart="10dp"
                android:paddingEnd="5dp"
                android:singleLine="true"
                android:textSize="14sp">

                <requestFocus />
            </EditText>
        </TableRow>

    </TableLayout>

    <!-- Row 5: Cart Movement save and cancel button -->
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tbl_CartMovementTable"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:layout_marginTop="15dp"
        android:id="@+id/rlayout"
        android:layout_weight="1">
        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="3dp"
            android:layout_marginRight="3dp"
            android:layout_weight="1">

            <TextView
                android:layout_width="0dip"
                android:layout_height="40dp"
                android:layout_weight="0.10"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:textSize="15sp" />

            <Button
                android:id="@+id/btnSave"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.26"
                android:text="@string/txt_save" />
            <TextView
                android:layout_width="0dip"
                android:layout_height="40dp"
                android:layout_weight="0.10"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:textSize="15sp" />
            <Button
                android:id="@+id/btnExport"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.26"
                android:visibility="gone"
                android:text="@string/txt_export" />
            <TextView
                android:layout_width="0dip"
                android:layout_height="40dp"
                android:layout_weight="0.10"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:textSize="15sp" />
            <Button
                android:id="@+id/btnCancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.26"
                android:text="@string/txt_cancel"/>
            <TextView
                android:layout_width="0dip"
                android:layout_height="40dp"
                android:layout_weight="0.10"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:textSize="15sp" />

            <TextView
                android:layout_width="0dip"
                android:layout_height="40dp"
                android:layout_weight="0.05"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:textSize="15sp" />
        </TableRow>
    </RelativeLayout>

</RelativeLayout>