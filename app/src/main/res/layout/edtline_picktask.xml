<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#879DCE"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true"
    android:padding="10dp"
    android:orientation="vertical">



    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="175dp"
        android:layout_below="@+id/tablerow6"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">




        <LinearLayout
            android:id="@+id/lay_TranslistTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="2dp">

            <TextView
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:gravity="center|left"
                android:paddingLeft="5dp"
                android:layout_marginTop="10dp"
                android:text="@string/txt_item"
                android:textAppearance="?android:attr/textAppearanceSmall"

                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="60dp"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content"
                android:gravity="center|left"
                android:paddingLeft="5dp"
                android:text="@string/txt_umeasur"
                android:textAppearance="?android:attr/textAppearanceSmall"

                android:textSize="14sp"
                android:textStyle="bold" />



            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:paddingStart="5dp"
                android:text="Pallet"
                android:layout_marginTop="10dp"
                android:textAppearance="?android:attr/textAppearanceSmall"

                android:textSize="14sp"
                android:textStyle="bold" />
            <TextView
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:gravity="center|left"
                android:layout_marginTop="13dp"
                android:text="@string/txt_qty"
                android:paddingLeft="5dp"
                android:textAppearance="?android:attr/textAppearanceSmall"

                android:textSize="14sp"
                android:textStyle="bold" />


            <!-- <TextView
            android:layout_width="370dp"
            android:layout_height="wrap_content"
            android:gravity="center|left"
            android:paddingLeft="5dp"
            android:text="@string/txt_Descrip"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textSize="14sp"
            android:textColor="@color/colorWhite"
            android:textStyle="bold" />-->
        </LinearLayout>


        <LinearLayout
            android:id="@+id/listdetails"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="2dp">

            <TextView
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:gravity="center|left"
                android:paddingLeft="5dp"
                android:id="@+id/edtlin_itemDescrib"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_marginTop="10dp"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:gravity="center|left"
                android:paddingLeft="5dp"
                android:layout_marginTop="10dp"
               android:id="@+id/edtlin_umeasur"
                android:textAppearance="?android:attr/textAppearanceSmall"

                android:textSize="14sp"
                android:textStyle="bold" />



            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:paddingStart="5dp"
                android:id="@+id/edtlin_Pallets"
                android:textAppearance="?android:attr/textAppearanceSmall"

                android:textSize="14sp"
                android:layout_marginTop="10dp"
                android:textStyle="bold" />


            <EditText
                android:layout_width="65dp"
                android:layout_height="25dp"
                android:paddingLeft="5dp"
                android:id="@+id/edtlin_qty"
                android:background="@color/colorWhite"
                android:gravity="center|left"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:inputType="number"
                android:textSize="14sp"
                android:layout_marginTop="10dp"
                android:textStyle="bold" />


            <!-- <TextView
            android:layout_width="370dp"
            android:layout_height="wrap_content"
            android:gravity="center|left"
            android:paddingLeft="5dp"
            android:text="@string/txt_Descrip"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textSize="14sp"
            android:textColor="@color/colorWhite"
            android:textStyle="bold" />-->
        </LinearLayout>





    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
       android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_height="wrap_content">


        <Button
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:text="@string/MMBtnSave"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:id="@+id/edtSave_btn">
        </Button>

        <Button
            android:layout_width="20dp"
            android:layout_gravity="center"
            android:visibility="invisible"
            android:text="@string/button_cancel"
            android:layout_height="10dp"

           >
        </Button>

        <Button
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:text="@string/button_cancel"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:id="@+id/edtCancel_btn">
        </Button>


    </LinearLayout>



</LinearLayout>
