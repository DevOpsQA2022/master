<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    android:background="@drawable/backgroundcolor">
    <TableRow
        android:id="@+id/tablerow01"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="3dp"
        android:layout_marginBottom="1dp">

        <TextView

            android:layout_width="100dp"
            android:layout_height="30dp"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="Item"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvItem"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:ems="10"
            android:padding="5dp"
            android:maxLength="10"
            />
    </TableRow>
    <TableRow
        android:id="@+id/tablerow02"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/tablerow01"
        android:layout_marginRight="3dp"
        android:layout_marginBottom="1dp">

        <TextView
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="Item Desc"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvItemDesc"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:ems="10"
            android:padding="5dp"
            android:maxLength="10"
            />
    </TableRow>

    <TableRow
        android:id="@+id/tablerow1"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="3dp"
        android:layout_below="@+id/tablerow02"
        android:layout_marginBottom="1dp">

        <TextView
            android:id="@+id/tvLotNo"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="Pallet #"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvMTPalNo"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:ems="10"
            android:padding="5dp"
            android:maxLength="10"
            />
    </TableRow>

    <TableRow
        android:id="@+id/tablerow11"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="3dp"
        android:layout_below="@+id/tablerow1"
        android:layout_marginTop="5dp"
        android:layout_marginRight="3dp"
        android:layout_marginBottom="1dp">

        <TextView
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="@string/Wlotno"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvMTP_WlotNo"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:ems="10"
            android:padding="5dp" />
    </TableRow>


    <TableRow
        android:id="@+id/tablerow2"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:layout_marginBottom="1dp"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/tablerow11">

        <TextView
            android:id="@+id/tvSlotNo"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:text="From Slot"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/tvMTFromSlt"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:ems="10"
            android:padding="5dp" />
    </TableRow>

    <TableRow
        android:id="@+id/tablerow3"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:layout_marginBottom="1dp"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/tablerow2">

        <TextView
            android:id="@+id/tvUOM"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:text="UOM"
            android:textSize="14sp"
            />
        <TextView
            android:id="@+id/tvMT_UOM"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:ems="10"
            android:padding="5dp"
           />
    </TableRow>


    <TableRow
        android:id="@+id/tablerow4"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:layout_marginBottom="1dp"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/tablerow3">

        <TextView
            android:id="@+id/tvQty"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:text="Qty to Move"
            android:textSize="14sp"/>
        <TextView
            android:id="@+id/tvMTQty"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:ems="10"
            android:padding="5dp" />
    </TableRow>

    <TableRow
        android:id="@+id/tablerow5"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:layout_marginBottom="1dp"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/tablerow4">

        <TextView
            android:id="@+id/tvToSlot"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:text="To Slot"
            android:textSize="14sp"/>
        <EditText
            android:id="@+id/edtMT_ToSLot"
            android:layout_width="175dp"
            android:layout_height="30dp"
            android:background="@color/colorWhite"
            android:ems="10"
            android:maxLength="10"
            android:textAllCaps="true"
            android:inputType="textPersonName"
            android:padding="5dp"
            />
        <ImageView
            android:id="@+id/imgBtn_lookup"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_baseline_search_24"
            android:layout_marginEnd="5dp"/>
    </TableRow>


    <RelativeLayout
        android:id="@+id/rlayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tablerow4"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="3dp"
        android:layout_weight="1">

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="3dp"
            android:layout_marginRight="3dp"
            android:layout_weight="3">

            <Button
                android:id="@+id/btnMTSave"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_weight=".5"
                android:text="@string/MMBtnSave" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:textSize="15sp" />

            <Button
                android:id="@+id/btnMTCancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_weight=".5"
                android:text="@string/MMBtnCancel" />

        </TableRow>
    </RelativeLayout>
</RelativeLayout>